@model IEnumerable<Author>

@{
    ViewData["Title"] = "List of Authors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ProfileURL)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.Age)</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var author in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@author.ProfileURL" alt="@author.Name" style="max-width: 150px"/>
                        </td>

                        <td class ="align-middle">
                            @Html.DisplayFor(modelItem => author.Name)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => author.Age)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Authors" asp-action="Edit" asp-route-id="@author.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-controller="Authors" asp-action="Details" asp-route-id="@author.Id"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_Createitem", "Authors")